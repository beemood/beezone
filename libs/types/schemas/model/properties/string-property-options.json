  "title": "string property options",
  "properties": {
    "type": {
      "const": "string"
    },
    "minLength": { "type": "integer", "minimum": 0 },
    "maxLength": { "type": "integer", "minimum": 0 },
    "format": {
      "$ref": "../enums/string-formats.json"
    },
    "startsWith": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "uniqueItems": true
    },
    "endsWith": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "uniqueItems": true
    },
    "isIn": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "uniqueItems": true
    },
    "notIn": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "uniqueItems": true
    },
    "casing": {
      "$ref": "../enums/string-casings.json"
    },
    "trim": {
      "type": "boolean"
    },
    "generated": {
      "$ref": "../enums/generated-types.json"
    }
  }
}
