{
  "name": "@beezone/types",
  "version": "0.0.23",
  "description": "Common utilities",
  "icon": "https://beemood.github.io/beezone/favicon.png",
  "homepage": "https://beemood.github.io/beezone/libs/types",
  "author": {
    "email": "robert.brightline@gmail.com",
    "name": "Robert Brightline",
    "url": "https://beemood.github.io"
  },
  "funding": [
    "https://cash.app/$puqlib"
  ],
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "development": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "schemas/model.schema.json",
    "!**/*.tsbuildinfo"
  ],
  "nx": {
    "sourceRoot": "libs/types/src",
    "targets": {
      "build": {
        "executor": "@nx/js:swc",
        "outputs": [
          "{options.outputPath}"
        ],
        "options": {
          "outputPath": "{projectRoot}/dist",
          "main": "{projectRoot}/src/index.ts",
          "tsConfig": "{projectRoot}/tsconfig.lib.json",
          "skipTypeCheck": true,
          "stripLeadingPaths": true
        }
      },
      "generate-types": {
        "executor": "nx:run-commands",
        "options": {
          "commands": [
            "npx @beezone/cli bundle-json-schema -f ./schemas/model/model.json -o ./schemas/model.schema.json",
            "npx @beezone/cli typify-json-schema -f ./schemas/model.schema.json -o ./src/lib/model/model.ts"
          ],
          "cwd": "{projectRoot}",
          "parallel": false
        }
      },
      "doc": {
        "executor": "nx:run-commands",
        "options": {
          "command": "npx typedoc --entryPoints ./{projectRoot}/src/index.ts --out ./public/{projectRoot} --tsconfig {projectRoot}/tsconfig.lib.json --favicon {projectRoot}/favicon.png"
        }
      }
    }
  },
  "dependencies": {
    "@swc/helpers": "~0.5.11"
  }
}
