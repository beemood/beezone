{
  "name": "@beezone/errors",
  "version": "0.0.21",
  "description": "Common utilities",
  "icon": "https://beemood.github.io/beezone/favicon.png",
  "homepage": "https://beemood.github.io/beezone/libs/errors",
  "author": {
    "email": "robert.brightline@gmail.com",
    "name": "Robert Brightline",
    "url": "https://beemood.github.io"
  },
  "funding": [
    "https://cash.app/$puqlib"
  ],
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "development": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "!**/*.tsbuildinfo"
  ],
  "nx": {
    "sourceRoot": "libs/errors/src",
    "targets": {
      "generate-errors": {
        "executor": "nx:run-commands",
        "options": {
          "command": "node {projectRoot}/scripts/generate-errors.cjs"
        }
      },
      "build": {
        "executor": "@nx/js:swc",
        "outputs": [
          "{options.outputPath}"
        ],
        "options": {
          "outputPath": "{projectRoot}/dist",
          "main": "{projectRoot}/src/index.ts",
          "tsConfig": "{projectRoot}/tsconfig.lib.json",
          "skipTypeCheck": true,
          "stripLeadingPaths": true
        },
        "dependsOn": [
          "generate-errors"
        ]
      },
      "doc": {
        "executor": "nx:run-commands",
        "options": {
          "command": "npx typedoc --entryPoints ./{projectRoot}/src/index.ts --out ./public/{projectRoot} --tsconfig {projectRoot}/tsconfig.lib.json --favicon {projectRoot}/favicon.png"
        }
      }
    }
  },
  "dependencies": {
    "@swc/helpers": "~0.5.11",
    "@nx/devkit": "21.3.11"
  }
}
